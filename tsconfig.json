{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "pretty": true,
    "lib": [
      "ES6"
    ],
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    // "paths": {
    //   "@user/*": [
    //     "./src/user/*"
    //   ]
    // }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}